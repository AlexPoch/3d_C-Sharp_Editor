        <Button FontSize="20" Content="Отмена" HorizontalAlignment="Left" Margin="177,120,0,0" VerticalAlignment="Top" Width="120" Height="34" Click="Cancel"/>
        <Label FontSize="20" Content="Цвет света" HorizontalAlignment="Left" Margin="15,16,0,0" VerticalAlignment="Top" Height="36" Width="210"/>
        <wpfx:ColorPicker x:Name="ColorPicker" DisplayColorAndName="True" MaxHeight="45" MaxWidth="120" Margin="177,16,51,139"/>
    </Grid>
